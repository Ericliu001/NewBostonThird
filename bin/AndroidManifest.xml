<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.newbostonthird"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.newbostonthird.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.newbostonthird.AsyncActivity"
            android:label="@string/title_activity_async" >
        </activity>
        <activity
            android:name="com.newbostonthird.ExternalDataActivity"
            android:label="@string/title_activity_external_data" >
        </activity>
        <activity
            android:name="com.newbostonthird.PlaySQLiteActivity"
            android:label="@string/title_activity_play_sqlite" >
        </activity>
        <activity
            android:name="com.newbostonthird.AccelerateActivity"
            android:label="@string/title_activity_accelerate" >
        </activity>
        <activity
            android:name="com.newbostonthird.HttpActivity"
            android:label="@string/title_activity_http" >
        </activity>
        <activity
            android:name="com.newbostonthird.APILoginActivity"
            android:label="@string/title_activity_json" >
        </activity>
        <activity
            android:name="com.newbostonthird.XMLParsingActivity"
            android:label="@string/title_activity_xmlparsing" >
        </activity>
    </application>

</manifest>
